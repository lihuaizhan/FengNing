<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/keyboard"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorw"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/pf_lv_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="onClick">

            <ImageButton
                android:id="@+id/getsa_back"
                android:layout_width="10dp"
                android:layout_height="17.5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:background="@drawable/back1" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="项目购买"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="门   票   单  价:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pf_E_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dp"
            android:layout_weight="1.6"
            android:background="@drawable/line"
            android:gravity="center"
            android:hint="请输入门票单价"
            android:inputType="textNoSuggestions"
            android:onClick="onClick"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pf_I_priceD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete2"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/keyboard"
        android:background="#ececec"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pf_img_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_cash_selector"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="人民币"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_goods_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pf_img_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_wechat_selector"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="微信"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_goods_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pf_img_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_alipay_selector"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="支付宝"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_goods_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pf_img_onecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_onecard_selector"
                android:onClick="onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="一卡通"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/activity_goods_16" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="门  票  名  称 :"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pf_T_ticketName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text=" "
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:gravity="center"
            android:text="门  票   数  量:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pf_E_ticketNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dp"
            android:layout_weight="1.6"
            android:background="@drawable/line"
            android:gravity="center"
            android:maxLength="5"
            android:hint="请输入门票数量"
            android:inputType="textNoSuggestions"
            android:onClick="onClick"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pf_I_numD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete2"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout19"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_toEndOf="@+id/radioGroup"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:gravity="center"
            android:text="一 卡 通 卡 号:"
            android:textColor="#000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pf_E_oneCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.5dp"
            android:layout_weight="1.6"
            android:background="@drawable/line"
            android:gravity="center"
            android:hint="请输入一卡通卡号"
            android:inputType="number"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/pf_I_codeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete2"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/linearLayout19"
        android:layout_toEndOf="@+id/radioGroup"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="合  计  金  额:"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pf_T_countPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="确定"
            android:textSize="28sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="取消"
            android:textSize="28sp" />
    </RadioGroup>

    <com.example.tps900.tps900.Utlis.GuiNumberKeyBoard_PF
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/radioGroup"></com.example.tps900.tps900.Utlis.GuiNumberKeyBoard_PF>
</RelativeLayout>