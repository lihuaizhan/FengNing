<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/img_payIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/separation_distance_20"
            android:src="@drawable/pay_food_cash"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_payName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separation_distance_8"
            android:gravity="center"
            android:text="现金支付"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_goods_20"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_payIcon" />
        <RadioButton
            android:id="@+id/cb_paySelector"
            android:layout_width="60dp"
            android:visibility="gone"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center" />

    </RelativeLayout>

</RelativeLayout>
