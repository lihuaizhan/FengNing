<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="237dp"
    android:background="@drawable/pop_bg"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="41dp"
       android:background="@drawable/pop_head_bg"

       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="会员登录"
           android:layout_centerInParent="true"
           android:textSize="17sp"
           android:textColor="#333333"
           />

   </RelativeLayout>
    <RelativeLayout
        android:layout_width="184dp"
        android:layout_height="33dp"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="34dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=" 请输入会员账号"
            android:id="@+id/vip_name"
            android:textSize="12sp"
            android:background="@drawable/edit_round"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="13dp"
            android:background="@drawable/vip_delete"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/vip_delete"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="184dp"
        android:layout_height="33dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="34dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=" 请输入密码"
            android:id="@+id/vip_pass"
            android:textSize="12sp"
            android:background="@drawable/edit_round"
            />
    </RelativeLayout>
<ImageView
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:layout_alignParentRight="true"
    android:layout_marginTop="74dp"
    android:layout_marginRight="20dp"
    android:id="@+id/vip_scan"
    android:background="@drawable/vip_scan"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="178dp"
       android:layout_centerHorizontal="true"

        >
        <Button
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="取消"
            android:id="@+id/pop_cancel"
            android:background="@drawable/pop_cancel"
            android:textColor="#FFFEFE"
            android:textSize="12sp"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="33dp"
            android:text="确定"
            android:id="@+id/pop_anfirm"
            android:background="@drawable/pop_anfirm"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>
</RelativeLayout>
