<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/item_cart_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/name_ticket_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄果树大瀑布"
                android:textColor="#808080"/>

            <TextView
                android:id="@+id/price_ticket_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/separation_distance_190"
                android:text="0.00"
                android:textColor="#808080"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                >
                <Button
                    android:id="@+id/btn_minus_cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/minus"
                    />
                <TextView
                    android:id="@+id/text_Count_cart"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/btn_minus_cart"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:textColor="#404040"
                    android:text="1"
                    />

                <Button
                    android:id="@+id/btn_plus_cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@+id/text_Count_cart"
                    android:background="@drawable/plus"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
