<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_goods_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_img"
            android:ems="2"
            android:gravity="center"
            android:text="10" />

        <TextView
            android:id="@+id/item_ecode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_img"
            android:layout_weight="1.3"
            android:ellipsize="start"
            android:gravity="center"
            android:maxLines="1"
            android:text="123" />

        <TextView
            android:id="@+id/item_ydpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:gravity="center"
            android:text="30" />

        <com.example.tps900.tps900.view.CounterView_food
            android:id="@+id/item_sdpeople"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.1"
            android:ems="2"
            android:text="1" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未核销"
                android:textColor="@color/red" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>