<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_pop_net"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separation_distance_3"
        android:layout_marginBottom="@dimen/separation_distance_3"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mark"
            />

        <TextView
            android:id="@+id/tv_title_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separation_distance_5"
            android:text="网络状态提示"
            android:textSize="18sp"
            android:textColor="#404040"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separation_distance_15"
        android:layout_marginLeft="@dimen/separation_distance_8"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_content_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前没有可以使用的网络，请设置网络！"
            android:textColor="#404040"
            android:layout_marginBottom="@dimen/separation_distance_10"
            />
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/separation_distance_1"
            android:layout_marginRight="@dimen/separation_distance_1"
            android:background="#FFFFFF"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/separation_distance_80"
                android:layout_height="@dimen/separation_distance_40"
                android:text="取消"
                android:textColor="#585858"
                android:background="@drawable/pop_btn"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_toRightOf="@id/btn_cancel"
                android:layout_width="@dimen/separation_distance_80"
                android:layout_height="@dimen/separation_distance_40"
                android:text="确认"
                android:textColor="#585858"
                android:layout_marginLeft="@dimen/separation_distance_12"
                android:background="@drawable/pop_btn"
                />

        </RelativeLayout>


</LinearLayout>
