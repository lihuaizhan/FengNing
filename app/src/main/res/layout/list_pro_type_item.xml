<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="91.5dp"
    android:layout_height="86dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/activity_good_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="91.5dp"
        android:layout_height="86dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="18"
            android:singleLine="true"
            android:textColor="@color/btn_bac" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/separation_distance_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="数量:"
                android:textColor="#7f7f7f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goodsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#7f7f7f" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/separation_distance_5"
            android:textColor="@color/btn_bac" />


    </LinearLayout>

</LinearLayout>
