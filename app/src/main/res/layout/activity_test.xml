<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/test_lv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="循环次数:"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_goods_20" />

        <EditText
            android:id="@+id/test_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/line"
            android:inputType="number"
            android:maxLines="5" />

        <Button
            android:id="@+id/test_btn"
            android:onClick="onViewClicked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开始" />

        <Button
            android:id="@+id/test_btn_clear"
            android:layout_width="wrap_content"
            android:onClick="onViewClicked"
            android:layout_height="match_parent"
            android:text="清除列表" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/test_lv1"
        android:layout_marginTop="@dimen/activity_goods_5"
        android:orientation="vertical">

        <ListView
            android:id="@+id/test_lt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

</RelativeLayout>