<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/name_ticket_cart"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#808080"
            android:text="加多宝"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/separation_distance_20"
            />

        <TextView
            android:id="@+id/price_ticket_cart"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_ticket_cart"
            android:text="0.00"
            android:textColor="#808080"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/separation_distance_35"
            />


        <TextView
            android:id="@+id/canReturn_ticket_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/price_ticket_cart"
            android:textColor="#808080"
            android:text="0"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/separation_distance_36"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            >
            <Button
                android:id="@+id/btn_minus_cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="@dimen/separation_distance_8"
                android:background="@drawable/minus"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/text_Count_cart"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/btn_minus_cart"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#404040"
                />

            <Button
                android:id="@+id/btn_plus_cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="@dimen/separation_distance_8"
                android:layout_toRightOf="@+id/text_Count_cart"
                android:background="@drawable/plus"
                android:layout_centerVertical="true"

                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

